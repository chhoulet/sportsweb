{% extends 'BackOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
		
                	<h2>Liste des messages re√ßus :</h2>

						{% for message in messages %}

							{{ message.author }}<br>
							{{ message.subject }}<br>
							{{ message.content }}<br>
							{{ message.dateCreated | date('d-m-Y H:i:s')}}<br>				
							{{ message.email }}<br>

							<a href="{{ path('back_office_message_delete',{id:message.id}) }}">Supprimer ce message</a>
							<a href="{{ path('back_office_message_readMessage',{id:message.id}) }}">Marquer ce message comme lu</a>
							
						{% endfor %}

				</div>
			</div>
		</div>

	{% endblock %}