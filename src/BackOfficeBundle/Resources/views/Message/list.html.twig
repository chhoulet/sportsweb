{% extends 'BackOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
		
                	<h2>Liste des messages re√ßus :</h2>

                		{% for message in app.session.flashbag.get('succes') %}
                			{{ message }}
                		{% endfor %}<br><br>

						{% for message in messages %}

							AUTHOR : <strong>{{ message.author }}</strong><br>
							SUBJECT : {{ message.subject }}<br>
							MESSAGE : {{ message.content }}<br>
							DATE D'ENVOI : {{ message.dateCreated | date('d-m-Y H:i:s')}}<br>				
							MAIL : {{ message.email }}<br><br>

							<a href="{{ path('back_office_message_delete',{id:message.id}) }}">Supprimer ce message</a><br><br>
							<a href="{{ path('back_office_message_readMessage',{id:message.id}) }}">Marquer ce message comme lu</a><br><br>
							
						{% endfor %}

				</div>
			</div>
		</div>

	{% endblock %}