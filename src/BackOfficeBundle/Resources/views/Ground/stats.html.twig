{% extends 'BackOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div id="page-wrapper">
			
            <div class="row">

            	<h2 style="text-align:center;">Statistiques Ground:</h2>

                <div class="col-lg-4">
		
                	<h4>Grounds classés par le nombre d'invitations:</h4>

						<div class="container">

							<ul>
								{% for invits in getGroundByNbInvitations %}
									<li>{{ invits.name }} a fait l'objet de {{ invits.nb}} {% if invits.nb > 1 %} invitations. {% else %} invitation. {% endif %}</li>
								{% endfor %}
							</ul>
							
						</div>

				</div>	

				<div class="col-lg-4">

					<h4>Grounds classés par le nombre d'Users:</h4>	

						<div class="container">

							<ul>
								{% for ground in getGroundsByNbUsers %}
									<li>{{ ground.name}} a {{ ground.nb }} {% if ground.nb > 1 %} inscrits qui ont choisi{% else %}<br> inscrit qui a choisi {% endif %} {{ ground.name}}<br> comme terrain de rattachement.</li>
								{% endfor %}
							<ul>

						</div>

				</div>		

				<div class="col-lg-4">

					<h4>Grounds classés par le nombre de Teams:</h4>	

						<div class="container">

							<ul>
								{% for ground in getGroundsByNbTeams %}
									<li>{{ ground.name }} compte {{ ground.nb }} {% if ground.nb > 1 %} équipes rattachées. {% else %} équipe rattachée.</li> {% endif %}
								{% endfor %}
							<ul>

						</div>
						
				</div>

            </div>         

        </div>

    {% endblock %}