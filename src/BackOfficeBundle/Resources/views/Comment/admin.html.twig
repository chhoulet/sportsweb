{% extends 'BackOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
		
					<h2> Liste des commentaires non-control√©s :</h2>

						{% for com in comments %}

			                <h2>
			                    <a href="#">{{ com.title }}</a>
			                </h2>
			                <p class="lead">
			                    by <a href="index.php">{{ com.author }}</a>
			                </p>
			                <p><span class="glyphicon glyphicon-time"></span> {{ com.dateCreated | date('d-m-Y H:i:s')}}</p>
			                <hr>
			                <img class="img-responsive" src="http://placehold.it/900x300" alt="">
			                <hr>
			                <p>{{ com.content }}</p>
			                <a class="btn btn-primary" href="{{ path('back_office_comment_response',{id:com.id}) }}">OK Admin <span class="glyphicon glyphicon-chevron-right"></span></a>

			                <a class="btn btn-primary" href="{{ path('back_office_comment_delete',{id:com.id}) }}">Suppression commentaire<span class="glyphicon glyphicon-chevron-right"></span></a>

		                	<hr>

	            		{% endfor %}

	            </div>			
			</div>
		</div>
		
	{% endblock %}