{% extends 'FrontOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div class="container">
            <div class="well col-lg-12">
				<div class="row">
                    <div class="col-lg-12">

                        <h3 >Invitations séléctionnées :</h3> 

                            {% if invits is not empty %}

                            	{% for invit in invits %}

                            		
                                        <small>{{ invit.sport }}<small>
    	                                <small>{{ invit.content }}</small><br>
    	                                <small>DATE : {{ invit.dateInvit | date('d-m-Y H:i') }}</small>                         
    	                                <small>LIEU : {{ invit.place }} </small>  
    	                                <small>MODE : {{ invit.mode }} </small><br>
                                        <a href="{{ path('front_office_invitation_one',{id:invit.id}) }}">Détail </a>
    	                                <a href="{{ path('front_office_invitation_response', {id:invit.id}) }}">Accepter l'invitation</a><br>
                                   
                                   
                                {% endfor %}

                            {% else %}

                                <p>Aucune invitation ne correspond aux critères choisis !</p>

                            {% endif %}
                          
                                             
                    </div>
                </div>
            </div>
        </div>
               
	{% endblock %}