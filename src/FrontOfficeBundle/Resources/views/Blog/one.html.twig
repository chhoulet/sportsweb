{% extends 'FrontOfficeBundle::layout.html.twig' %}

    {% block content %}

        <div class="container">

            <div class="row">

                <!-- Blog Post Content Column -->
                <div class="col-lg-8">

                    <!-- Blog Post -->

                    <!-- Title -->
                    <h1>{{ article.title }}</h1>

                    <!-- Author -->
                    <p class="lead">
                        by <a href="#">{{ article.author }}</a>
                    </p>

                    <hr>

                    <!-- Date/Time -->
                    <p><span class="glyphicon glyphicon-time"></span> {{ article.dateCreated | date('d-m-Y H:i:s')}}</p>

                    <hr>

                    <!-- Preview Image -->
                    <img class="img-responsive" src="http://placehold.it/900x300" alt="">

                    <hr>

                    <!-- Post Content -->
                    <p class="lead">{{ article.content }}</p>

                    <hr>

                    <!-- Blog Comments -->

                    <!-- Comments Form -->
                    <div class="well">
                        <h4>Leave a Comment:</h4>
                            {{ form(form) }}
                    </div>
                    
                    <hr>
                   
                    <!-- Posted Comments -->

                    <!-- Comment -->
                    {% for com in article.comment %}
                        <div class="media">
                            <a class="pull-left" href="#">
                                <img class="media-object" src="http://placehold.it/64x64" alt="">
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading">{{ com.title }}
                                    <small>{{ com.dateCreated | date('d-m-Y H:i:s') }}</small>
                                </h4>
                                {{ com.content }}
                            </div>
                        </div>
                    {% endfor %}  
                    
                </div>

    {% endblock %}

    {% block sidebar %}

        {{ include('FrontOfficeBundle:Blog:sidebar.html.twig') }}

    {% endblock %}
