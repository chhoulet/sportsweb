{% extends 'FrontOfficeBundle::layout.html.twig' %}

    {% block content %}

	    <div class="container">

	        <div class="row">

	            <!-- Blog Entries Column -->
	            <div class="col-md-8">

	                <h1 class="page-header">
	                    Sports Web
	                    <small><a href="{{ path('front_office_blog_homepage') }}">Blog :</a></small>
	                </h1>

	                <!-- First Blog Post -->
	                {% if articles is not empty %}

		                {% for art in articles %}
			                <h2>
			                    <a href="{{ path('front_office_blog_one',{id:art.id}) }}">{{ art.title }}</a>
			                </h2>
			                <p class="lead">
			                    by {% for at in art.author %}<a href="{{ path('front_office_user_one',{id:at.id}) }}">{{ at.username }}{% endfor %}</a>
			                </p>
			                <p><span class="glyphicon glyphicon-time"></span> {{ art.dateCreated | date('d-m-Y H:i:s')}}</p>
			               {#  <hr>
			                <img class="img-responsive" src="http://placehold.it/900x300" alt=""> #}
			                <hr>
			                <p>{{ art.content }}</p>
			               
			                <hr>
		            	{% endfor %}

		            {% else %}

		            	<p>Aucun article ne figure dans cette cat√©gorie.</p>
		            		{% if (is_granted('ROLE_USER')) %}

		            			<p>Publier votre article :</p>

		            				{{ form(form) }}

		            		{% else %}
		            			<a href="{{ path('fos_user_security_login')}}">Connectez-vous pour publier un article</a>
		            		{% endif %}

		            {% endif %}
	               	                
	            </div>

	            
                 <div class="col-md-4">

                   {#  <!-- Blog Search Well -->
                    <div class="well">
                        <h4>Blog Search</h4>
                        <div class="input-group">
                            <input type="text" class="form-control">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">
                                    <span class="glyphicon glyphicon-search"></span>
                            </button>
                            </span>
                        </div>
                        <!-- /.input-group -->
                    </div> #}

                    <!-- Blog Categories Well -->
                    <div class="well">

                        <h4>Blog Categories</h4>

                            <div class="row">

                                {% for sport in sports %}

                                    <ul class="list-unstyled">                                    
                                        <li><a href="{{ path('front_office_blog_triBySport',{sport:sport}) }}">{{sport.name}}</a></li> 
                                    </ul>

                                {% endfor %}  

                            </div>

                    </div>  

                </div>         


    		</div>

    	</div>

    {% endblock %}

   