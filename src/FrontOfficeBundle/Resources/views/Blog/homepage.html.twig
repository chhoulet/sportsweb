{% extends 'FrontOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                    {% for article in articles %}
    	                <h1>{{ article.title }}</h1>

    	                <!-- Author -->
    	                <p class="lead">
    	                    by <a href="#">{{ article.author }}</a>
    	                </p>

    	                <hr>

    	                <!-- Date/Time -->
    	                <p><span class="glyphicon glyphicon-time"></span>Poste le : {{ article.dateCreated | date('d-m-Y H:i:s') }} </p>

    	                <hr>

    	                <!-- Preview Image -->
    	                <img class="img-responsive" src="http://placehold.it/900x300" alt="">

    	                <hr>

    	                <!-- Post Content -->
    	                <p class="lead">{{ article.content }}</p><br><br>
                        
                        <p>Commentaires:</p>
                        
                            {% for com in article.comment %}
                                <p><div class="media">
                                    <a class="pull-left" href="#">
                                        <img class="media-object" src="http://placehold.it/64x64" alt="">
                                    </a>
                                    <div class="media-body">
                                        <h4 class="media-heading">{{ com.title }}
                                            <small>{{ com.dateCreated | date('d-m-Y H:i:s') }}</small>
                                        </h4>
                                        {{ com.content }}
                                    </div>
                                </div></p>
                            {% endfor %}

                        <a href="{{path('front_office_blog_one',{id:article.id}) }}"><button>DÃ©tails :</button></a>

    	                <hr>
                    {% endfor %}
            	                      
                         
                    <div class="well">

                        {% if (is_granted('ROLE_USER')) %}
                            <h4>Editer un article</h4>
                            {{ form(formArticle) }}
                        {% else %}
                            <p>Vous souhaitez publier un article ? Connectez-vous !</p>
                            <a href="{{path('fos_user_security_login')}}"><button>Connection</button></a>
                        {% endif %}
                        
                    </div> 
                     
            </div>

                <hr>

                {{ include ('FrontOfficeBundle:Blog:sidebar.html.twig') }}
                
                <hr>


	{% endblock %}