{% extends 'FrontOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div class="container">

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">

                <!-- Blog Post -->

                <!-- Title -->
                    {% for art in article %}
	                <h1>{{ art.title }}</h1>

	                <!-- Author -->
	                <p class="lead">
	                    by <a href="#">{{ art.author }}</a>
	                </p>

	                <hr>

	                <!-- Date/Time -->
	                <p><span class="glyphicon glyphicon-time"></span>Poste le : {{ art.dateCreated | date('d-m-Y') }} </p>

	                <hr>

	                <!-- Preview Image -->
	                <img class="img-responsive" src="http://placehold.it/900x300" alt="">

	                <hr>

	                <!-- Post Content -->
	                <p class="lead">{{ art.content }}</p>

	                <hr>
            	    {% endfor %}

                <!-- Blog Comments -->

                <!-- Comments Form -->
                <div class="well">
                    <h4>Leave a Comment:</h4>
                    <form role="form">
                        <div class="form-group">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
               {#  {{ form(form) }}
 #}
                <hr>

                <!-- Posted Comments -->

                <!-- Comment -->
                {% for art in article %}
                    {% for com in art.comment %}
                        <div class="media">
                            <a class="pull-left" href="#">
                                <img class="media-object" src="http://placehold.it/64x64" alt="">
                            </a>
                            <div class="media-body">
                                <h4 class="media-heading">{{ com.title }}
                                    <small>{{ com.dateCreated | date('now') }}</small>
                                </h4>
                                {{ com.content }}
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}

            </div>

            <!-- Blog Sidebar Widgets Column -->
            {% block sidebar %}

                {{ include('FrontOfficeBundle:Blog:sidebar.html.twig') }}

            {% endblock %}

        </div>
        <!-- /.row -->

        <hr>


	{% endblock %}