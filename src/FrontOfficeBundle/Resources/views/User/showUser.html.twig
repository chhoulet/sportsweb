{% extends 'FrontOfficeBundle::layout.html.twig' %}

	{% block content %}

		<div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">{{app.user.username}}
                    <small>SPORT : {{app.user.sportPracticed}}</small>
                    <small>AGE : {{app.user.age }} ans</small>
                </h1>
            </div>
            <a href="{{ path('front_office_suer_showFriends') }}">Voir mes amis</a>
        </div>
        <!-- /.row -->

        {# <!-- Projects Row -->
        <div class="row">

        	{% if (app.user.image == true) %}
        		{% for image in app.user.image %}
		            <div class="col-md-4 portfolio-item">
		                <a href="#">
		                    <img class="img-responsive" src="http://placehold.it/700x400" alt="">
		                </a>
		                <h3>
		                    <a href="#">{{ app.user.imageName }}</a>
		                </h3>
		                <p>{{ app.user.imageComment }}</p>
		            </div>
		        {% endfor %}
        	{% endif %}

            <div class="col-md-4 portfolio-item">              
                <h3>
                    <a href="#">Sports d'intérêt :</a>
                </h3>
                <p>{{ app.user.sportViewed}}</p>
            </div>
            
        </div>
        <!-- /.row --> #}

        <!-- Projects Row -->
        <div class="row">

        	{# Code pour afficher les invitations acceptées #}
        	{% if (app.user.invitation != NULL) %}
        		{% for invit in app.user.invitation %}

		            <div class="col-md-4 portfolio-item">
		                <a href="#">
		                    <img class="img-responsive" src="http://placehold.it/700x400" alt="">
		                </a>
		                <h3>
		                    <p>{{ invit.sport }}</p>
		                </h3>
		                <p>{{ invit.dateInvit | date('d-m-Y H:i:s') }}</p><br>
		                <p>{{ invit.mode }}</p><br>
		                <p>{{ invit.place }}</p><br>
		            </div>

		        {% endfor %}
	        {% endif %}

	        {# Code pour afficher les invitations lancées #}
            <div class="col-md-4 portfolio-item">
                <a href="#">
                    <img class="img-responsive" src="http://placehold.it/700x400" alt="">
                </a>
                <h3>
                    <a href="#">Project Name</a>
                </h3>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod odio, gravida pellentesque urna varius vitae.</p>
            </div>
            
        </div>

	{% endblock %}