{% extends 'FrontOfficeBundle::layout.html.twig' %}

	{% block content %}

         <div class="row">

            {% for user in listUsers %}

                <div class="col-md-4 portfolio-item">
                    <a href="#">
                        <img class="img-responsive" src="http://placehold.it/700x400" alt="">
                    </a>
                    <h3>
                        <a href="#">{{ user.username }}</a>
                    </h3>
                    <p>{{ user.age }}</p>
                    <p>{{ user.sportPracticed }}</p><br><br>
                    <p>{{ user.sportViewed }}</p><br><br>

                    {% if (is_granted('ROLE_USER')) %}
                    <a href="{{ path('front_office_user_getFriend',{id:user.id}) }}">Ajouter à ma liste d'amis</a>
                    {% else %}
                    <p>Vous voulez ajouter ce joueur à votre liste d'amis ? <br><br>
                        <a href="{{ path('fos_user_security_login')}}">Connectez-vous !</a><br>
                    {% endif %}
                </div>

            {% endfor %}
		
	{% endblock %}