{% extends 'FrontOfficeBundle::layout.html.twig' %}

	{% block content %}

        <div style="margin-top:45px;" class="container">
            <div class="well col-lg-10">            

                {% for user in listUsers %}

                    <div class="col-md-4 portfolio-item">

                        <a href="#">
                            <img class="img-responsive" src="http://placehold.it/700x400" alt="">
                        </a>
                        <h3>
                            <a href="{{ path('front_office_user_one',{id:user.id}) }}">{{ user.username }}</a>
                        </h3>

                        <p>{{ user.age }}</p>

                        {% for sport in user.sportPracticed %}
                            <p>{{ sport.name }}</p><br><br>
                        {% endfor %}

                        {% for sport in user.sportViewed %}
                            <p>{{ sport.name }}</p><br><br>
                        {% endfor %}

                        {% if (is_granted('ROLE_USER')) %}

                            <a href="{{ path('front_office_user_getFriend',{id:user.id}) }}">Ajouter à ma liste d'amis</a><br><br>
                            <a href="{{ path('front_office_invitation_new', {userTo:user.id}) }}">Lancer un défi !</a><br><br>  
                        {% else %}

                            <p>Vous voulez ajouter ce joueur à votre liste d'amis ? <br><br>
                            <a href="{{ path('fos_user_security_login')}}">Connectez-vous !</a><br><br>  
                                       
                        {% endif %}
                           
                    </div>

                {% endfor %}

            </div>
        </div>
		
	{% endblock %}