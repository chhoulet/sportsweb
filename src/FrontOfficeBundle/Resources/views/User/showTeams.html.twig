{% extends 'FrontOfficeBundle::layout.html.twig' %}

	{% block content %}

        <div class="container">
            <div class="well col-lg-10">

               {#  {{ app.user.team.name }} #}

                {% for player in app.user.team %}

            		<div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">{{ player.name }}
                                <small>DATE : {{ player.dateCreated | date('d-m-Y H:i') }}</small><br>
                                <small>SPORT : {{ player.sport }} </small><br>
                                <small>LIEU : {{ player.place }} </small><br>
                                <small>MODE : {{ player.typeOfGame }} </small><br>
                            </h1>
                        </div>
                    </div>
               
                {% endfor %}
        
            </div>
        </div>
        
        <!-- /.row -->

	{% endblock %}